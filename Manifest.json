{
  "name": "HarmonyStream Pro",
  "short_name": "HarmonyStream",
  "description": "Professional music player for online streaming and local files",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f0f23",
  "theme_color": "#6a11cb",
  "orientation": "portrait-primary",
  "categories": ["music", "entertainment", "productivity"],
  "icons": [
    {
      "src": "/icons/icon-72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Play Now",
      "short_name": "Play",
      "description": "Continue playing your music",
      "url": "/?action=play",
      "icons": [{ "src": "/icons/play-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Browse Playlists",
      "short_name": "Playlists",
      "description": "Browse your music library",
      "url": "/?view=playlists",
      "icons": [{ "src": "/icons/playlist-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Upload Music",
      "short_name": "Upload",
      "description": "Upload local music files",
      "url": "/?action=upload",
      "icons": [{ "src": "/icons/upload-icon.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "HarmonyStream Desktop Player"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "HarmonyStream Mobile Player"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "scope": "/",
  "dir": "ltr",
  "lang": "en",
  "display_override": ["window-controls-overlay"],
  "edge_side_panel": {
    "preferred_width": 360
  },
  "protocol_handlers": [
    {
      "protocol": "web+harmonystream",
      "url": "/?track=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "audio/*": [".mp3", ".wav", ".ogg", ".flac", ".aac", ".m4a"]
      }
    }
  ]
}